<h2> Check if you have seen a TV Show episode / Movie! </h2>
<hr />

<div class="row">
  <form action="/seen" method="post" class="form-vertical col-md-4">
    <div class="form-group">
      <h4> Type </h4>

      <select class="form-control">
        <option <%= 'selected="selected"' if type == 'movie' %> value="movie"> Movie </option>
        <option <%= 'selected="selected"' if type == 'series' %> value="series"> TV Show </option>
      </select>
    </div>

    <div class="form-group">
      <input type="text" class="form-control" name="title" placeholder="Title" />
    </div>

    <% if type == 'series' %>
    <div class="form-group">
      <input type="text" class="form-control" name="season"
             placeholder="Season" />
    </div>

    <div class="form-group">
      <input type="text" class="form-control" name="episode"
             placeholder="Episode number" />
    </div>
    <% end %>

    <button type="submit" class="btn btn-blank">Advance!</button>
  </form>
</div>
