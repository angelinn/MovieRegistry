<h3 class="h3 text-center"> Login to continue: </h3>
<hr />

<form action="/login" method="post" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-md-5">Username</label>
    <div class="col-md-3">
      <input type="text" name="username" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-md-5">Password</label>
    <div class="col-md-3">
      <input type="password" name="password" class="form-control col-md-3" />
    </div>
  </div>
  <button type="submit" class="btn btn-blank col-md-offset-6">Advance!</button>
</form>
